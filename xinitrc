#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

# Tuilf¯jet for at starte dbus(bruges fx til forward search med emacs)
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# tilf√∏jet for at f√• automount til at virke
# D-Bus
 if which dbus-launch >/dev/null && test -z "$DBUS_SESSION_BUS_ADDRESS"; then
        eval "$(dbus-launch --sh-syntax --exit-with-session)"
 fi

# tilf√∏jet fordi jeg ikke bruger DE. xrdb indl√¶ser bl.a font-indstillinger. -merge sikre at tidligere l√¶ste indstillinger ikke slettes n√•r en ny fil indl√¶ses

xrdb -merge ~/.Xresources         # update x resources db
xmodmap ~/.Xmodmaprc              # load change in keyboard layout

# xfsettingsd & # k√∏res fra rc.lua
numlockx & # boot up with numlock

exec ck-launch-session awesome
# exec ck-launch-session  gnome-session --session=awesome
#exec ck-launch-session startxfce4
# exec startkde
# exec startxfce4
# ...or the Window Manager of your choice
